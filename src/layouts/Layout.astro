---
import "../styles/global.css";
import { supabaseClient } from '@/db/supabase.client';
import UserNav from "../components/UserNav";
import { Toaster } from "@/components/ui/toaster";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;

// Pobierz sesję użytkownika
const session = await supabaseClient.auth.getSession();
const user = session.data.session?.user;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="w-full border-b">
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="text-xl font-bold">BoardMateAI</a>
        {user ? (
          <UserNav client:load user={user} />
        ) : (
          <div class="space-x-4">
            <a
              href="/auth/login"
              class="text-sm font-medium hover:text-blue-600 transition-colors"
            >
              Zaloguj się
            </a>
            <a
              href="/auth/register"
              class="text-sm font-medium bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors"
            >
              Zarejestruj się
            </a>
          </div>
        )}
      </div>
    </header>
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
