---
import Layout from "@/layouts/Layout.astro";
import { ForgotPasswordForm } from "@/components/auth/ForgotPasswordForm";
---

<Layout title="Odzyskiwanie hasła - BoardMateAI">
  <main class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md space-y-8">
      <div class="text-center">
        <h1 class="text-2xl font-bold">Odzyskaj dostęp do konta</h1>
        <p class="mt-2 text-sm text-gray-600">Wyślemy Ci link do zresetowania hasła</p>
      </div>
      <ForgotPasswordForm client:load />
    </div>
  </main>
</Layout>
