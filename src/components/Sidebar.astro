---
import { supabaseClient } from '@/db/supabase.client';

const { data: { session } } = await supabaseClient.auth.getSession();
const isLoggedIn = !!session;
---
<aside class="fixed left-0 top-16 h-[calc(100vh-4rem)] w-64 bg-white border-r border-gray-200 shadow-sm" role="navigation" aria-label="Menu boczne">
  <div class="h-full py-4">
    <div class="space-y-1 px-2">
      <a
        href="/"
        class:list={[
          "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
          { "bg-gray-50 text-blue-600": Astro.url.pathname === "/" }
        ]}
        aria-current={Astro.url.pathname === "/" ? "page" : undefined}
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
        </svg>
        Strona główna
      </a>

      {isLoggedIn && (
        <>
          <a
            href="/recommendations"
            class:list={[
              "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
              { "bg-gray-50 text-blue-600": Astro.url.pathname === "/recommendations" }
            ]}
            aria-current={Astro.url.pathname === "/recommendations" ? "page" : undefined}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500" viewBox="0 0 20 20" fill="currentColor">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Rekomendacje
          </a>

          <a
            href="/games"
            class:list={[
              "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
              { "bg-gray-50 text-blue-600": Astro.url.pathname === "/games" }
            ]}
            aria-current={Astro.url.pathname === "/games" ? "page" : undefined}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500" viewBox="0 0 20 20" fill="currentColor">
              <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
            </svg>
            Katalog gier
          </a>

          <a
            href="/history"
            class:list={[
              "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
              { "bg-gray-50 text-blue-600": Astro.url.pathname === "/history" }
            ]}
            aria-current={Astro.url.pathname === "/history" ? "page" : undefined}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
            </svg>
            Historia
          </a>

          <a
            href="/profile"
            class:list={[
              "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
              { "bg-gray-50 text-blue-600": Astro.url.pathname === "/profile" }
            ]}
            aria-current={Astro.url.pathname === "/profile" ? "page" : undefined}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
            Profil
          </a>
        </>
      )}

      {!isLoggedIn && (
        <>
          <a
            href="/auth/login"
            class:list={[
              "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
              { "bg-gray-50 text-blue-600": Astro.url.pathname === "/auth/login" }
            ]}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            Zaloguj się
          </a>

          <a
            href="/auth/register"
            class:list={[
              "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
              { "bg-gray-50 text-blue-600": Astro.url.pathname === "/auth/register" }
            ]}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500" viewBox="0 0 20 20" fill="currentColor">
              <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
            </svg>
            Zarejestruj się
          </a>
        </>
      )}
    </div>
  </div>
</aside> 