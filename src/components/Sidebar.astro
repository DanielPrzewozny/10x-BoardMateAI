---
import { supabaseClient } from "@/db/supabase.client";

const {
  data: { session },
} = await supabaseClient.auth.getSession();
const isLoggedIn = !!session;
---

<aside
  class="fixed left-0 top-16 h-[calc(100vh-4rem)] w-64 bg-white border-r border-gray-200 shadow-sm"
  role="navigation"
  aria-label="Menu boczne"
>
  <div class="h-full py-4">
    <div class="space-y-1 px-2">
      <a
        href="/"
        class:list={[
          "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
          { "bg-gray-50 text-blue-600": Astro.url.pathname === "/" },
        ]}
        aria-current={Astro.url.pathname === "/" ? "page" : undefined}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
          ></path>
        </svg>
        Strona główna
      </a>

      {
        isLoggedIn && (
          <>
            <a
              href="/games"
              class:list={[
                "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
                { "bg-gray-50 text-blue-600": Astro.url.pathname === "/games" },
              ]}
              aria-current={Astro.url.pathname === "/games" ? "page" : undefined}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 2a4 4 0 00-4 4v1H5a1 1 0 00-.994.89l-1 9A1 1 0 004 18h12a1 1 0 00.994-1.11l-1-9A1 1 0 0015 7h-1V6a4 4 0 00-4-4zm2 5V6a2 2 0 10-4 0v1h4zm-6 3a1 1 0 112 0 1 1 0 01-2 0zm7-1a1 1 0 100 2 1 1 0 000-2z"
                  clip-rule="evenodd"
                />
              </svg>
              Katalog gier
            </a>

            <a
              href="/saved-recommendations"
              class:list={[
                "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
                { "bg-gray-50 text-blue-600": Astro.url.pathname === "/saved-recommendations" },
              ]}
              aria-current={Astro.url.pathname === "/saved-recommendations" ? "page" : undefined}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
              </svg>
              Zapisane rekomendacje
            </a>

            <a
              href="/favorites"
              class:list={[
                "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
                { "bg-gray-50 text-blue-600": Astro.url.pathname === "/favorites" },
              ]}
              aria-current={Astro.url.pathname === "/favorites" ? "page" : undefined}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                  clip-rule="evenodd"
                />
              </svg>
              Ulubione gry
            </a>

            <a
              href="/profile"
              class:list={[
                "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
                { "bg-gray-50 text-blue-600": Astro.url.pathname === "/profile" },
              ]}
              aria-current={Astro.url.pathname === "/profile" ? "page" : undefined}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
              </svg>
              Profil
            </a>
          </>
        )
      }

      {
        !isLoggedIn && (
          <>
            <a
              href="/auth/login"
              class:list={[
                "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
                { "bg-gray-50 text-blue-600": Astro.url.pathname === "/auth/login" },
              ]}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z"
                  clip-rule="evenodd"
                />
              </svg>
              Zaloguj się
            </a>

            <a
              href="/auth/register"
              class:list={[
                "group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-50 hover:text-blue-600",
                { "bg-gray-50 text-blue-600": Astro.url.pathname === "/auth/register" },
              ]}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="mr-3 h-5 w-5 text-gray-500 group-hover:text-blue-500"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
              </svg>
              Zarejestruj się
            </a>
          </>
        )
      }
    </div>
  </div>
</aside>
